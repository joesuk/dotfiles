#!/bin/bash

selected=$(find "$HOME" \( \
    -path "$HOME/.config" -o -path "$HOME/.config/*" -o \
    -path "$HOME/.local" -o -path "$HOME/.local/*" \
\) -type f -o \( \
    -type d -name '.*' -a ! -path "$HOME/.config*" -a ! -path "$HOME/.local*" -prune \
\) -o -type f 2>/dev/null | \
rofi -threads 0 -width 75 -dmenu -i -p "Open" -font 'Noto Sans Mono 20')

if [[ -n "$selected" ]]; then
    exo-open "$selected"
fi
