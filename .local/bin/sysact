#!/bin/sh

# A dmenu wrapper script for system functions.
export WM="dwm"
case "$(readlink -f /sbin/init)" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='loginctl' ;;
esac

wmpid(){ # This function is needed if there are multiple instances of the window manager.
	tree="$(pstree -ps $$)"
	tree="${tree#*$WM(}"
	echo "${tree%%)*}"
}

case "$(printf "ğŸ”’ lock\nğŸšª leave dwm\nâ™»ï¸ renew dwm\nğŸ» reboot\nğŸ–¥ï¸shutdown\nğŸ’¤ suspend\nğŸ’¤ hibernate" | dmenu -i -p 'Action: ')" in
	'ğŸ”’ lock') slock ;;
	"ğŸšª leave $WM") kill -TERM "$(wmpid)" ;;
	"â™»ï¸ renew $WM") kill -HUP "$(wmpid)" ;;
	'ğŸ’¤ suspend') $ctl suspend -i ;;
	'ğŸ’¤ hibernate') $ctl hibernate -i ;;
	'ğŸ”ƒ reboot') $ctl reboot -i ;;
	'ğŸ–¥ï¸shutdown') $ctl poweroff -i ;;
	*) exit 1 ;;
esac
